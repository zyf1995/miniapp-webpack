.container {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.title-box {
    width: 100%;
    padding-top: 330rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999;
    background: url(https://cdn.it120.cc/images/weappshop/icon-cart.png) no-repeat center 205rpx;
    background-size: 100rpx auto;
    margin-bottom: 50rpx;
}

.to-index-btn {
    color: #fff;
    background: #e64340;
    border-radius: 6px;
    width: 300rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 28rpx;
    margin: 0 auto;
}

.list-top {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    font-size: 28rpx;
    align-items: center;
}

.list-top .label {
    color: #000;
}

.list-top .edit-btn {
    color: #999;
    height: 100%;
}

.goodsList {
    width: 100%;
    background-color: #fff;
    padding-bottom: 100rpx;
}

.a-good {
    width: 100%;
    overflow: hidden;
}

.a-good-conts {
    display: flex;
    justify-content: space-between;
    padding-left: 30rpx;
    box-sizing: border-box;
    background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat 30rpx center;
    background-size: 40rpx auto;
}

.goods-info {
    border-bottom: 1px solid #eee;
    display: flex;
    align-items: center;
    padding: 30rpx 0 30rpx 70rpx;
    width: 720rpx;
    box-sizing: border-box;
}

.goods-info .img-box {
    width: 160rpx;
    height: 160rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #d8d8d8;
}

.goods-info .img-box .img {
    width: 160rpx;
    height: 160rpx;
}

.goods-info .text-box {
    width: 440rpx;
    position: relative;
}

.goods-info .text-box .goods-title {
    font-size: 28rpx;
    color: #000;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    padding: 10rpx 20rpx 5rpx 0;
}

.goods-info .text-box .goods-label {
    font-size: 26rpx;
    color: #999;
    height: 38rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    line-height: 38rpx;
    margin: 8rpx 0 25rpx 0;
}

.flex.between {
    justify-content: space-between;
}

.goods-info .text-box .goods-price {
    font-size: 26rpx;
    color: #e64340;
}

.goods-info .text-box .buy-num {
    width: 164rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 24rpx;
    text-align: center;
    display: flex;
}

.self-center {
    align-self: center;
}

.goods-info .text-box .buy-num .minus-btn.disabled {
    background-color: #f5f5f9;
    border-left: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    color: #ccc;
}

.goods-info .text-box .buy-num .minus-btn {
    width: 48rpx;
    height: 100%;
    border-left: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    border-bottom-left-radius: 6rpx;
    border-top-left-radius: 6rpx;
}

.goods-info .text-box .buy-num input {
    width: 68rpx;
    height: 48rpx;
    min-height: 48rpx;
    text-align: center;
    font-size: 24rpx;
    border: 1rpx solid #ccc;
}

.goods-info .text-box .buy-num .add-btn {
    width: 48rpx;
    height: 100%;
    border-right: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    border-bottom-right-radius: 6rpx;
    border-top-right-radius: 6rpx;
}

.flex {
    display: flex;
    flex: 1;
}

.settlement-box {
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    border-bottom: 1px solid #eee;
    border-top: 1px solid #eee;
    background-color: #fff;
    z-index: 999;
}

.settlement-box .left-price {
    display: flex;
    width: 510rpx;
    justify-content: space-between;
    line-height: 100rpx;
    padding: 0 30rpx 0 0;
    font-size: 28rpx;
    box-sizing: border-box;
}

.settlement-box .all-selected {
    padding-left: 90rpx;
    color: #000000;
    background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat 30rpx center;
    background-size: 40rpx auto;
}

.settlement-box .total {
    color: #e64340;
}

.settlement-box .to-pay-btn.no-select {
    background-color: #ccc;
}

.settlement-box .to-pay-btn {
    width: 240rpx;
    text-align: center;
    line-height: 34px;
    background-color: #e64340;
    font-size: 32rpx;
    color: #ffffff;
    border-radius: 0;
}

.a-good-conts {
    display: flex;
    justify-content: space-between;
    padding-left: 30rpx;
    box-sizing: border-box;
    background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat 30rpx center;
    background-size: 40rpx auto;
}

.a-good-conts.active {
    background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat 30rpx center;
    background-size: 40rpx auto;
}

.settlement-box .all-selected {
    padding-left: 90rpx;
    color: #000000;
    background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat 30rpx center;
    background-size: 40rpx auto;
}

.settlement-box .all-selected.active {
    background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat 30rpx center;
    background-size: 40rpx auto;
}